{
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": ["airbnb", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "warn",
		"no-use-before-define": "off",
		"no-restricted-syntax": "off",
		"no-plusplus": "off",
		"no-shadow": "off",
		"radix": "off",
		"prettier/prettier": "error",
		"no-unused-expressions": ["error", { "allowTernary": true }],
		"default-case": "off"
	},
	"plugins": ["prettier"]
}
